{
	"extends": [
		"eslint:recommended",
		"next/core-web-vitals",
		"next",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended"
	],
	"globals": {
		"React": "readonly"
	},
	"rules": {
		"no-unused-vars": [
			1,
			{
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		],
		"react/prop-types": "off",
		"no-mixed-spaces-and-tabs": 0, // disable rule,
		"react/no-unescaped-entities": "off"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react", "react-hooks"],
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
